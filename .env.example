# ask-cbioportal Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM PROVIDER SETTINGS
# =============================================================================
# Choose which LLM provider to use for inference:
#   - "anthropic": Use Anthropic's Claude API (cloud)
#   - "litellm": Use any OpenAI-compatible API (local LLMs, LiteLLM, Ollama, vLLM, etc.)
LLM_PROVIDER=litellm

# -----------------------------------------------------------------------------
# Option 1: Anthropic (Cloud) - when LLM_PROVIDER=anthropic
# -----------------------------------------------------------------------------
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# -----------------------------------------------------------------------------
# Option 2: LiteLLM / Local LLMs - when LLM_PROVIDER=litellm
# -----------------------------------------------------------------------------
# Your LiteLLM server URL (OpenAI-compatible endpoint)
LITELLM_API_BASE=http://192.168.33.27

# API key for your LiteLLM server (if required)
LITELLM_API_KEY=your_litellm_api_key_here

# Model name - this depends on your LiteLLM configuration
# Common examples:
#   - For LiteLLM: use the model alias configured on your server
#   - For Ollama: "ollama/llama3", "ollama/mixtral"
#   - For vLLM: the model name loaded on your server
MODEL=gpt-4

# Maximum tokens for responses (default: 4096)
MAX_TOKENS=4096

# Enable streaming responses (default: true)
STREAMING=true

# =============================================================================
# DATA BACKEND SETTINGS (where cBioPortal data comes from)
# =============================================================================
# Backend type: "rest" (default) or "mcp"
# - rest: Uses the public cBioPortal REST API (no setup required)
# - mcp: Uses cbioportal-mcp server with ClickHouse (requires database setup)
ASK_CBIOPORTAL_BACKEND=rest

# REST API Configuration (used when ASK_CBIOPORTAL_BACKEND=rest)
CBIOPORTAL_API_URL=https://www.cbioportal.org/api

# MCP/ClickHouse Configuration (used when ASK_CBIOPORTAL_BACKEND=mcp)
# Command to start the cbioportal-mcp server
# MCP_SERVER_COMMAND=uvx cbioportal-mcp

# ClickHouse connection settings (for MCP backend)
# CLICKHOUSE_HOST=localhost
# CLICKHOUSE_PORT=8123
# CLICKHOUSE_USER=default
# CLICKHOUSE_PASSWORD=
# CLICKHOUSE_DATABASE=cbioportal

# =============================================================================
# OTHER SETTINGS
# =============================================================================
# Enable verbose output
VERBOSE=false
